  							<phase>site</phase>
  							<goals>
  								<goal>run</goal>
  							</goals>
  							<configuration>
  								<tasks>
  									<ant antfile="src/build/resources/build.xml"
  									    dir="."
  									    inheritAll="false">
  										<property name="project.build.directory" location="${project.build.directory}" />
  										<property name="build.resources.directory" location="superpom/src/build/resources" />
  									</ant>
  								</tasks>
  							</configuration>
  						</execution>
  					</executions>
  				</plugin>
  			</plugins>
  		</build>
