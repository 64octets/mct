								<goal>aggregate</goal>
							</goals>
						</execution>
						<execution>
							<id>clover-site</id>
							<phase>pre-site</phase>
							<goals>
								<goal>instrument</goal>
								<goal>aggregate</goal>
							</goals>
						</execution>
  					</executions>
  				</plugin>
