  <modelVersion>4.0.0</modelVersion>
  <groupId>mct</groupId>
  <artifactId>mct-superpom</artifactId>
  <packaging>pom</packaging>
  <name>MCT Super Pom</name>
  <version>2.0.0</version>
  <description>This is the pom which sets up a complete MCT build from source. </description>
  <build>
    <extensions>
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
         <artifactId>wagon-ssh-external</artifactId>
         <version>1.0-beta-2</version>
      </extension>
    </extensions>
  	<pluginManagement>
  		<plugins>
		      <plugin>
    <artifactId>maven-clean-plugin</artifactId>
     <version>2.4.1</version>
    <configuration>
       <filesets>
      <fileset>
       <directory>bin</directory>
      </fileset>
      <fileset>
       <directory>logs</directory>
      </fileset>
	        <fileset>
       <directory>test-output</directory>
      </fileset>
                 </filesets>
              </configuration>
            </plugin>
  		  	<plugin>
  				<groupId>com.atlassian.maven.plugins</groupId>
  				<artifactId>maven-clover2-plugin</artifactId>
  				<version>${clover.version}</version>
				<configuration>
     				<licenseLocation>${M2_REPO}/clover.license</licenseLocation>
     				<jdk>1.6</jdk>
     				<excludes>
     					<exclude>**/*Test.java</exclude>
     					<exclude>**/Test*.java</exclude>
     					<exclude>**/Mock*.java</exclude>
     					<exclude>**/*Mock.java</exclude>
     					<exclude>**/*dbloader/**/*.java</exclude>
     					<exclude>**/org/acme/**/*.java</exclude>
     				</excludes>
     				<contextFilters>assert</contextFilters>
     				<!--  
     				<reportDescriptor>${project.build.dir}/../clover-report.xml</reportDescriptor>
     			    -->
     				<historyDir>${project.build.dir}</historyDir>
				</configuration>
  			</plugin>
  		  <plugin>
  				<groupId>org.apache.maven.plugins</groupId>
  				<artifactId>maven-antrun-plugin</artifactId>
  				<version>1.3</version>
	  			<dependencies>
					<dependency>
						<groupId>ant</groupId>
						<artifactId>ant-optional</artifactId>
						<version>1.5.2</version>
					</dependency>
	  			</dependencies>
  		</plugin>
  	</plugins>
  </pluginManagement>
  <plugins>
    	<plugin>
 			<groupId>org.apache.maven.plugins</groupId>
 			<artifactId>maven-site-plugin</artifactId>
 			<version>2.0</version>
 			<configuration>
 				<outputEncoding>UTF-8</outputEncoding>
 			</configuration>
 		</plugin>
 		  <plugin>
  			<groupId>org.apache.maven.plugins</groupId>
  			<artifactId>maven-surefire-plugin</artifactId>
  			<version>${surefire.version}</version>
  			<configuration>
 				<forkMode>once</forkMode>
 				<excludeGroups>heavyGUI</excludeGroups>
				<systemPropertyVariables>
					<derby.stream.error.file>${project.build.directory}/derby.log</derby.stream.error.file>
					<log4j.configuration>file:${basedir}/../superpom/src/test/resources/test-log4j.xml</log4j.configuration>
				</systemPropertyVariables>
  			</configuration>
  		</plugin>
  		  		<plugin>
  			<groupId>org.apache.maven.plugins</groupId>
  			<artifactId>maven-resources-plugin</artifactId>
  			<version>2.4</version>
  			<configuration>
  				<encoding>ISO-8859-1</encoding>
  			</configuration>
  		</plugin>
  		<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-source-plugin</artifactId>
			<version>2.1.1</version>
			<configuration>
				<excludeResources>true</excludeResources>
			</configuration>
			<executions>
				<execution>
					<id>attach-sources</id>
					<phase>prepare-package</phase>
					<goals>
						<goal>jar-no-fork</goal>
					</goals>
				</execution>
				<execution>
					<id>aggregate-sources</id>
					<phase>package</phase>
					<goals>
						<goal>aggregate</goal>
					</goals>
				</execution>
			</executions>
